---
type Props = {
  class?: string
  children: any
}

const { class: className, ...rest } = Astro.props
---

<div class:list={["content", className]} {...rest}>
  <slot />
</div>

<style>
  .content {
    flex: 1;
    margin-block: 0 16px;

    color: var(--gray-500);
    font-size: 1rem;
    font-weight: 500;
    line-height: 1.5;
  }
</style>
