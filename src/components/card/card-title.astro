---
type Props = {
  class?: string
  children: any
}

const { class: className, ...rest } = Astro.props
---

<h3 class:list={[className]} {...rest}>
  <slot />
</h3>

<style>
  h3 {
    color: var(--gray-800);
    font-size: 1.125rem;
    font-weight: 700;
    line-height: 1;
    margin: 0;
  }
</style>
