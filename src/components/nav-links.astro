---
const links = [
  {
    label: "Sobre",
    link: "#about",
  },
  {
    label: "Servi√ßos",
    link: "#services",
  },
  {
    label: "Contato",
    link: "#contact",
  },
]
---

<nav>
  <ul>
    {
      links.map(({ label, link }) => (
        <li>
          <a href={link}>{label}</a>
        </li>
      ))
    }
  </ul>

  <script>
    function updateActiveLink() {
      const hash = window.location.hash
      document.querySelectorAll('a[href^="#"').forEach((link) => {
        if (link.getAttribute("href") === hash) {
          link.classList.add("active")
        } else {
          link.classList.remove("active")
        }
      })
    }

    // Initial check
    updateActiveLink()

    // On hash change (user clicks or manually edits URL)
    window.addEventListener("hashchange", updateActiveLink)
  </script>
</nav>

<style>
  ul {
    display: flex;
    flex-direction: column;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  a {
    color: var(--gray-800);
    display: inline-block;

    padding-block: 6px;
    width: 100%;

    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
  }

  .active {
    color: var(--blue-300);
    font-weight: 700;
  }

  @media (min-width: 1024px) {
    ul {
      flex-direction: row;
      gap: 20px;
    }
  }
</style>
